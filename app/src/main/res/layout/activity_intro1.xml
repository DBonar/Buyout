<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tmw.sept22buyout.Intro1Act"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/labelAskNHumans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="How Many Human Players:"
        android:textSize="28sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/editNHumans"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:text="How Many Human Players:" />

    <TextView
        android:id="@+id/labelAskNMachines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="How Many Machine Players:"
        android:textSize="28sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/editNMachines"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:text="How Many Machine Players:" />

    <EditText
        android:id="@+id/editNMachines"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="0"
        android:inputType="number"
        android:textSize="28sp"
        app:layout_constraintLeft_toRightOf="@+id/labelAskNMachines"
        app:layout_constraintTop_toBottomOf="@+id/editNHumans"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:text="0" />

    <EditText
        android:id="@+id/editNHumans"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:focusedByDefault="true"
        android:hint="0"
        android:inputType="number"
        android:textSize="28sp"
        app:layout_constraintLeft_toRightOf="@+id/labelAskNMachines"
        app:layout_constraintRight_toRightOf="@+id/editNMachines"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:text="0">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/labelNPlayers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="62dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:text="Total Players = 0."
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/btnIntro1Done"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/labelAskNMachines"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:text="Total Players is 0." />

    <Button
        android:id="@+id/btnIntro1Done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:onClick="intro1DoneClicked"
        android:text="@string/strDone"
        app:layout_constraintBaseline_toBaselineOf="@+id/labelIntro1Error"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:id="@+id/labelIntro1Error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="211dp"
        android:layout_marginStart="22dp"
        android:text=""
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btnIntro1Done"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:text="This is a test msg" />
</android.support.constraint.ConstraintLayout>
